extends layout-black
block corpo
    .w3-section.w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Tese Recebida
            .w3-container.w3-margin
                h4 Informação sobre o Aluno
                table.w3-table-all  
                    tr
                        th Nome
                        td= tese.nome
                    tr
                        th Identificador
                        td= tese.identificador
                    tr
                        th Curso
                        td= tese.curso
                    tr
                        th Instituição
                        td= tese.instituicao
                h4 Informação sobre a Tese
                table.w3-table-all  
                    tr
                        th Título
                        td= tese.titulo
                    tr
                        th Data
                        td= tese.data
                    tr
                        th Tipo
                        td= tese.tipo
            footer.w3-container.w3-teal
                address 
                    i
                        a(href='http://localhost:4006/paginicial', style="text-decoration:none") Voltar à página inicial
